#include<stdio.h>
#include<stdlib.h>
int n,top=-1,*stack;
void push();
void pop();
void show();
void main()
{
int choice;
printf("Enter the number of elements in  the stack");
scanf("%d",&n);
printf("********Stack operations using array*****");
printf("\n-------------------------\n");
while(choice !=4)
{
printf("choose one from the below options\n");
printf("\n1.push\n2.pop\n3.show\n4.Exit");
printf("\nEnter your choice\n");
scanf("%d",&choice);
switch(choice)
{
case 1:
{
push();
break;
}
case 2:
{
pop();
break;
}
case 3:
{
show();
break;
}
case 4:
{
printf("Existing");
break;
}
default:
{
printf("please Enter valid choice");
}
};
}
}
void push()
{
int val;
if(top==n)
printf("\noverflow");
else
{
  printf("Enter the value?");
  scanf("%d",&val);
  top=top+1;
  stack[top]=val;
  }
}
void pop()
{
if(top==-1)
printf("underflow");
else
top=top-1;
}
void show()
{
int i;
for(i=top;i>=0;--i)
{
printf("%d\n",stack[i]);
}
if(top==-1)
{
printf("stack is empty");
}

}